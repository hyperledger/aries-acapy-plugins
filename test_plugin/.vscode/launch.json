  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run/Debug Plugin",
      "type": "python",
      "request": "launch",
      "module": "aries_cloudagent",
      "justMyCode": false,
      "args": ["start", "--arg-file=${workspaceRoot}/docker/default.yml"]
    },
    {
      "name": "ruff - test_plugin",
      "type": "python",
      "request": "launch",
      "module": "ruff",
      "console": "integratedTerminal",
      "sudo": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}/test_plugin",
      "args": ["check", "."]
    },
    {
      "name": "ruff fix - test_plugin",
      "type": "python",
      "request": "launch",
      "module": "ruff",
      "console": "integratedTerminal",
      "sudo": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}/test_plugin",
      "args": ["check", ".", "--fix"]
    },
    {
      "name": "black (check) - test_plugin",
      "type": "python",
      "request": "launch",
      "module": "black",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}/test_plugin",
      "args": [".", "--check"]
    },
    {
      "name": "black (format) - test_plugin",
      "type": "python",
      "request": "launch",
      "module": "black",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}/test_plugin",
      "args": ["."]
    }
  ]
}
